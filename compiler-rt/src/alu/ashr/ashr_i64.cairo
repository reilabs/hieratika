        TestCaseTwoArgs { lhs: 0b1111111111111111111111111111111111111111111111111111111111111111, rhs: 11, expected: 0b1111111111111111111111111111111111111111111111111111111111111111 },
        TestCaseTwoArgs { lhs: 0b1111111111111111111111111111111111111111111111111111111111111111, rhs: 15, expected: 0b1111111111111111111111111111111111111111111111111111111111111111 },
        TestCaseTwoArgs { lhs: 0b1111111111111111111111111111111111111111111111111111111111111111, rhs: 19, expected: 0b1111111111111111111111111111111111111111111111111111111111111111 },
        TestCaseTwoArgs { lhs: 0b1111111111111111111111111111111111111111111111111111111111111111, rhs: 23, expected: 0b1111111111111111111111111111111111111111111111111111111111111111 },
        TestCaseTwoArgs { lhs: 0b1111111111111111111111111111111111111111111111111111111111111111, rhs: 27, expected: 0b1111111111111111111111111111111111111111111111111111111111111111 },
        TestCaseTwoArgs { lhs: 0b1111111111111111111111111111111111111111111111111111111111111111, rhs: 31, expected: 0b1111111111111111111111111111111111111111111111111111111111111111 },
        TestCaseTwoArgs { lhs: 0b1111111111111111111111111111111111111111111111111111111111111111, rhs: 39, expected: 0b1111111111111111111111111111111111111111111111111111111111111111 },
        TestCaseTwoArgs { lhs: 0b1111111111111111111111111111111111111111111111111111111111111111, rhs: 47, expected: 0b1111111111111111111111111111111111111111111111111111111111111111 },
        TestCaseTwoArgs { lhs: 0b1111111111111111111111111111111111111111111111111111111111111111, rhs: 55, expected: 0b1111111111111111111111111111111111111111111111111111111111111111 },
        TestCaseTwoArgs { lhs: 0b1111111111111111111111111111111111111111111111111111111111111111, rhs: 63, expected: 0b1111111111111111111111111111111111111111111111111111111111111111 },

        // A sample of possible shifts on 2^64/2 - 1 from 0 throughout the whole input value length.
        TestCaseTwoArgs { lhs: 0b0111111111111111111111111111111111111111111111111111111111111111, rhs: 0,  expected: 0b0111111111111111111111111111111111111111111111111111111111111111 },
        TestCaseTwoArgs { lhs: 0b0111111111111111111111111111111111111111111111111111111111111111, rhs: 1,  expected: 0b0011111111111111111111111111111111111111111111111111111111111111 },
        TestCaseTwoArgs { lhs: 0b0111111111111111111111111111111111111111111111111111111111111111, rhs: 2,  expected: 0b0001111111111111111111111111111111111111111111111111111111111111 },
        TestCaseTwoArgs { lhs: 0b0111111111111111111111111111111111111111111111111111111111111111, rhs: 3,  expected: 0b0000111111111111111111111111111111111111111111111111111111111111 },
        TestCaseTwoArgs { lhs: 0b0111111111111111111111111111111111111111111111111111111111111111, rhs: 4,  expected: 0b0000011111111111111111111111111111111111111111111111111111111111 },
        TestCaseTwoArgs { lhs: 0b0111111111111111111111111111111111111111111111111111111111111111, rhs: 7,  expected: 0b0000000011111111111111111111111111111111111111111111111111111111 },
        TestCaseTwoArgs { lhs: 0b0111111111111111111111111111111111111111111111111111111111111111, rhs: 11, expected: 0b0000000000001111111111111111111111111111111111111111111111111111 },
