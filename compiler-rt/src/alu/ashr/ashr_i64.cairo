use crate::alu::ashr::ashr;

pub fn __llvm_ashr_l_l_l(n: u128, shift: u128) -> u128 {
    ashr::<u64>(n, shift)
}

#[cfg(test)]
mod tests {
    use super::__llvm_ashr_l_l_l;
    use crate::alu::test_case::TestCaseTwoArgs;
    #[cairofmt::skip]
    pub const test_cases: [TestCaseTwoArgs; 50] = [
        // A sample of possible shifts on -1 from 0 throughout the whole input value length.
        TestCaseTwoArgs { lhs: 0b1111111111111111111111111111111111111111111111111111111111111111, rhs: 0,  expected: 0b1111111111111111111111111111111111111111111111111111111111111111 },
        TestCaseTwoArgs { lhs: 0b1111111111111111111111111111111111111111111111111111111111111111, rhs: 1,  expected: 0b1111111111111111111111111111111111111111111111111111111111111111 },
